<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KeyboardFragment">

    <Button
        android:id="@+id/key_up_arrow"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="↑"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_insert"
        app:layout_constraintStart_toStartOf="@+id/key_down_arrow" />

    <Button
        android:id="@+id/key_right_arrow"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="→"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_delete"
        app:layout_constraintStart_toEndOf="@+id/key_down_arrow" />

    <Button
        android:id="@+id/key_down_arrow"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="↓"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_delete"
        app:layout_constraintStart_toEndOf="@+id/key_left_arrow" />

    <Button
        android:id="@+id/key_page_down"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="Page down"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_delete"
        app:layout_constraintStart_toEndOf="@+id/key_end" />

    <Button
        android:id="@+id/key_left_arrow"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="←"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_delete"
        app:layout_constraintStart_toEndOf="@+id/key_page_down" />

    <Button
        android:id="@+id/key_page_up"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="Page\nup"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_insert"
        app:layout_constraintStart_toEndOf="@+id/key_home" />

    <Button
        android:id="@+id/key_home"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="Home"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_insert"
        app:layout_constraintStart_toEndOf="@+id/key_insert" />

    <Button
        android:id="@+id/key_insert"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="Insert"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/key_f7" />

    <Button
        android:id="@+id/key_end"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="End"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_delete"
        app:layout_constraintStart_toEndOf="@+id/key_delete" />

    <Button
        android:id="@+id/key_delete"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="Delete"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/key_insert" />

    <Button
        android:id="@+id/key_f11"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="F11"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_f7"
        app:layout_constraintStart_toEndOf="@+id/key_f10" />

    <Button
        android:id="@+id/key_f12"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="F12"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_f7"
        app:layout_constraintStart_toEndOf="@+id/key_f11" />

    <Button
        android:id="@+id/key_f10"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="F10"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_f7"
        app:layout_constraintStart_toEndOf="@+id/key_f9" />

    <Button
        android:id="@+id/key_f7"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="F7"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/key_f1" />

    <Button
        android:id="@+id/key_f8"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="F8"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_f7"
        app:layout_constraintStart_toEndOf="@+id/key_f7" />

    <Button
        android:id="@+id/key_f9"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="F9"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_f7"
        app:layout_constraintStart_toEndOf="@+id/key_f8" />

    <Button
        android:id="@+id/key_f2"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="F2"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_f1"
        app:layout_constraintStart_toEndOf="@+id/key_f1" />

    <Button
        android:id="@+id/key_f3"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="F3"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_f1"
        app:layout_constraintStart_toEndOf="@+id/key_f2" />

    <Button
        android:id="@+id/key_f4"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="F4"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_f1"
        app:layout_constraintStart_toEndOf="@+id/key_f3" />

    <Button
        android:id="@+id/key_f5"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="F5"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_f1"
        app:layout_constraintStart_toEndOf="@+id/key_f4" />

    <Button
        android:id="@+id/key_f6"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="F6"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/key_f1"
        app:layout_constraintStart_toEndOf="@+id/key_f5" />

    <Button
        android:id="@+id/key_esc"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="Esc"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/key_f1"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onButtonPressed"
        android:padding="0dp"
        android:text="F1"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/key_esc" />
</androidx.constraintlayout.widget.ConstraintLayout>
